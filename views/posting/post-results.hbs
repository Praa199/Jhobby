<h1>This is the search result</h1>
{{#if user}}
<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each result }}
  <div class="col">
    <div class="card">
      <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
      <div class="card-body">
        <a href="/posting/{{this._id}}/view">
          <h5 class="card-title">{{this.title}} <br>â‚¬ {{this.hourlyFee}}</h5>
        </a>
        <p class="card-text">{{this.description}}</p>
      </div>
      <div class="card-footer">
        <small class="text-muted">{{this.location}} {{this.date}}</small>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each result }}
    <div class="col">
      <div class="card">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
        <div class="card-body">
          <a href="/auth/signup">
            <h5 class="card-title">{{this.title}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
        </div>
        <div class="card-footer">
          <small class="text-muted">{{this.location}} {{this.date}}</small>
        </div>
      </div>
    </div>
    {{/each }}
  </div>
  {{/if}}