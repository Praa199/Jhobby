{{#if user}}
<form method="POST" action="/events/{{posting._id}}/rating">
  <p>Please give your valuable opinion:</p>
  <label for="ratings">How fun was this event</label>
  <select name="ratings" id="rating">
    <option value="1">1*</option>
    <option value="2">2*</option>
    <option value="3">3*</option>
    <option value="4">4*</option>
    <option value="5">5*</option>
  </select>

  <button type="submit">Create a rating</button>
</form>
{{/if}}